<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <label>Name:</label>
  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">

  <br></br>

  <label>Owners:</label>

  <% @owners.each do |owner| %>
     <%= owner.name %><input type="radio" name="pet[owner_ids]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner==owner %>></input>
  <% end %>

  <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
    <input type="text" name="owner[name]" id="owner_name">
  <br></br>

  <input type="submit" value="Update Pet">

</form>
